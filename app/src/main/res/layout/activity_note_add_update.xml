<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_form_add_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/addbackground"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title -->

    <!-- Description -->
    <EditText
        android:id="@+id/edt_title"
        android:layout_width="310sp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_small"
        android:hint="@string/title"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="#808080" />

    <EditText
        android:id="@+id/edt_description"
        android:layout_width="310sp"
        android:layout_height="110sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_rectangle_big"
        android:hint="@string/description"
        android:inputType="textCapSentences"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:maxLines="4" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/save"/>
</LinearLayout>


